import React, { useState } from 'react';

function HomePage() {
  const [mainBodyDisplay, setMainBodyDisplay] = useState('block');
  const [startBtnDisplay, setStartBtnDisplay] = useState('none');
  const [adminBtnDisplay, setAdminBtnDisplay] = useState('none');
  const [mainPanelDisplay, setMainPanelDisplay] = useState('block');
  const [questions, setQuestions] = useState([]);

  const handleHomePage = () => {
    setMainBodyDisplay('none');
    setStartBtnDisplay('block');
    setAdminBtnDisplay('block');
    setMainPanelDisplay('none');
    setQuestions([]); // Clearing questions array
  };

  return (
    <div>
      <div id="mainBody" style={{ display: mainBodyDisplay }}>
        Main Body Content
      </div>
      <button id="startBtn" style={{ display: startBtnDisplay }}>
        Start Button
      </button>
      <button id="adminBtn" style={{ display: adminBtnDisplay }}>
        Admin Button
      </button>
      <div id="mainPanel" style={{ display: mainPanelDisplay }}>
        Main Panel Content
      </div>
      <ul id="questionsUl">
        {questions.map((question, index) => (
          <li key={index}>{question}</li>
        ))}
      </ul>
      <button onClick={handleHomePage}>Done Button</button>
    </div>
  );
}

export default HomePage;

